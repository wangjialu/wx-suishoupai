.container {
    padding-top: 100rpx;
}

.icon {
    margin: 0 auto;
    display: block;
    width: 200rpx;
    height: 200rpx;
}

.title {
    margin-top: 60rpx;
    text-align: center;
    font-size: 40rpx;
}

.des {
    margin-top: 44rpx;
    text-align: center;
    font-size: 28rpx;
    color: #888888;
}

.button {
    margin: 0 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    text-align: center;
    font-size: 36rpx;
}

.green {
    margin-top: 66rpx;
    background-color: #09BB07;
    color: #fff;
}

.gray {
    margin-top: 30rpx;
    background-color: #FBFAFC;
    border: 1rpx solid #D6D5D6;
}

.copy {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 20rpx;
    text-align: center;
    font-size: 20rpx;
    color: #B2B2B2;
}